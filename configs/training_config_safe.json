{
  "model": {
    "base_model": "runwayml/stable-diffusion-v1-5",
    "clap_model": "laion/larger_clap_music_and_speech",
    "audio_dim": 512,
    "text_dim": 768,
    "attention_dim": 768,
    "num_audio_tokens": 8
  },
  "training": {
    "batch_size": 4,
    "gradient_accumulation_steps": 2,
    "mixed_precision": true,
    "max_grad_norm": 0.5,
    "num_workers": 4
  },
  "data": {
    "data_dir": "data/vggsound",
    "sample_rate": 48000,
    "audio_duration": 10.0,
    "image_size": 512
  },
  "stage1": {
    "num_steps": 3000,
    "learning_rate": 1e-4,
    "warmup_steps": 100,
    "weight_decay": 0.01
  },
  "stage2": {
    "num_steps": 7000,
    "learning_rate": 5e-5,
    "warmup_steps": 200,
    "lora_rank": 8,
    "lora_alpha": 32,
    "lora_dropout": 0.1,
    "lora_target_modules": ["to_k", "to_q", "to_v", "to_out.0"]
  },
  "stage3": {
    "num_steps": 2000,
    "learning_rate": 0.1,
    "warmup_steps": 0,
    "early_stopping": true,
    "target_min": 0.35,
    "target_max": 0.45
  },
  "optimization": {
    "use_cache": true,
    "cache_size": 500,
    "use_safe_augmentation": true
  },
  "logging": {
    "log_dir": "logs",
    "log_every": 10,
    "checkpoint_every": 500,
    "validation_every": 500
  }
}